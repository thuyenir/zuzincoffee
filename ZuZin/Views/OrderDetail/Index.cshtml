@model List<ZuZin.Models.OrderDetailViewModel>

<div style="padding: 40px; margin-top: 20px;">
    <h2 style="text-align:center;">Chi tiết đơn đặt hàng</h2>
    @if (Model.Any())
    {
        <table class="table" style="padding:20px;background-color:antiquewhite;">
            <thead>
                <tr>
                    <th>Mã chi tiết</th>
                    <th>Tên sản phẩm</th>
                    <th>Tên khách hàng</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderDetail in Model)
                {
                    <tr>
                        <td>@orderDetail.Id</td>
                        <td>@orderDetail.ProductName</td>
                        <td>@orderDetail.CustomerName</td>
                        <td>@orderDetail.Quantity</td>
                        <td>@orderDetail.Price</td>
                        <td>@(orderDetail.Price * orderDetail.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Chưa có đơn hàng nào được đặt.</p>
        <p>Chắc do cà phê quá tệ :))</p>
    }
</div>

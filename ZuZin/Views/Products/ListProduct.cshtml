@model IEnumerable<ZuZin.Models.Product>
<div style="padding:40px;margin-top:50px;background-color:antiquewhite;">
    <h2>Danh sách sản phẩm</h2>
    <p>
        <a asp-action="Add" class="btn btn-primary">Thêm sản phẩm</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Mô tả</th>
                <th>Hình ảnh</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td style="width:690px;">@product.Description</td>
                    <td><img src="@product.Image" alt="Product Image" style="max-width: 100px; max-height: 100px;" /></td>
                    <td>
                        <span><a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-primary">Sửa</a></span>
                        <span> <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-primary">Xóa</a></span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


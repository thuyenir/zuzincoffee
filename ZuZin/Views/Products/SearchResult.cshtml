
@model List<Product>

@{
    ViewBag.Title = "Search Result";
}

<div class="container mt-5" style="margin:40px 50px;">
    <h2 style="text-align:center ; font-size:30px;font-family:sans-serif;">Kết quả tìm kiếm của bạn!</h2>
    <div style="padding:20px;margin-top:10px;">
        @if (Model != null && Model.Any())
        {
            <div class="row mt-4">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card mb-3">
                            <img src="@item.Image" class="card-img-top" alt="Product Image" style="width:200px;height:200px;">
                            <div class="card-body">
                                <a asp-controller="Products" asp-action="Detail" asp-route-id="@item.ProductId">
                                    <h5 class="card-title"> Sản phẩm : @item.Name</h5>
                                </a>
                                <p class="card-text">Giá : @item.Price.ToString("C")</p>
                                <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pId="@item.ProductId" class="btn btn-primary">
                                    <span class="fa fa-shopping-cart"></span> Mua Ngay
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div style="padding:20px;margin-top:10px;">
                <p class="text-center">Không tìm thấy sản phẩm nào cả.</p>
            </div>
        }
    </div>
</div>
